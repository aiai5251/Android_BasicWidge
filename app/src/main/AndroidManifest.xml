<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lvmama.www.lvmamatest" >

    <!--设置权限-->
    <uses-permission android:name="android.permission.CALL_PHONE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="驴妈妈旅游"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".WelcomeActivity"
            android:label="驴妈妈旅游" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- 跳转需要申明 activity-->
        <activity android:name="com.lvmama.gift.andriod.TicketViewActivity"/>
        <activity android:name="com.lvmama.gift.andriod.CheckBoxDemo"/>

        <!-- android:theme="@android:style/Theme.DeviceDefault.Dialog 设置成覆盖在某个activity上-->
        <activity android:name="com.lvmama.gift.andriod.FrameLayoutActivity"
            android:theme="@android:style/Theme.DeviceDefault.Dialog"/>

        <activity android:name="com.lvmama.gift.andriod.TableLayoutActivity" />
    </application>

</manifest>
