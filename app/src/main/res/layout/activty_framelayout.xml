<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--帧布局-->

    <!--android:foreground 设置前景图，在所有子视图的前面-->
    <!--android:background 设置背景-->
    <!--android:keppScreenOn 保持屏幕唤醒-->
    <!--android:foregroundGravity 设置前景图的位置-->

    <TextView
        android:layout_gravity="center"
        android:background="#785313"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:text="第一个页面"
        android:id="@+id/textView1" />

    <TextView
        android:layout_gravity="center"
        android:background="#127381"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:text="第二个页面"
        android:id="@+id/textView2" />

    <TextView
        android:layout_gravity="center"
        android:background="#898922"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:text="第三个页面"
        android:id="@+id/textView3" />

    <TextView
        android:layout_gravity="center"
        android:background="#012371"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:text="第四个页面"
        android:id="@+id/textView4" />

    <ProgressBar
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_gravity="center|top" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="80%"
        android:id="@+id/textViewPro"
        android:layout_gravity="top|center" />

</FrameLayout>
